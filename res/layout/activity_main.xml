<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.technoexponent.artwork.topcropImageview.TopCropImageView
        android:id="@+id/background_imgvw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/artbg" />

    <ImageView
        android:id="@+id/logo_imgvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" >

        <View
            android:id="@+id/view1"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="#000" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/view1"
            android:background="@drawable/round_corner_login"
            android:textColor="#fff"
            android:text="LOG IN" />

        <TextView
            android:id="@+id/registration_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view1"
            android:textColor="#A32C30"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/round_corner_register"
            android:text="REGISTER" />
    </RelativeLayout>

</RelativeLayout>